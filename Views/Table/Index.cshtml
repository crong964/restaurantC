@model IEnumerable<_netmvc.Models.Table>

@{
    ViewData["Title"] = "Bàn ăn";
}

<h1>Index</h1>



<div class="container ">

    <div class="grid grid-cols-6">
        @foreach (var i in Model)
        {
            <div class="col-span-1 text-4xl text-light p-3">
                @if (i.status.Equals("empty"))
                {
                    <div class="aspect-square rounded-2xl relative bg-green-400 flex justify-center items-center">
                        
                            @Html.DisplayFor(m => i.number)
                       
                        <form  class=" " asp-action="Delete"
                            asp-controller="Table" method="post">
                            <input type="hidden" name="Id" value="@i.Id">
                            <button title="Xóa bàn" class="absolute top-0 cursor-pointer right-0" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                                    <path
                                        d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z" />
                                </svg>
                            </button>
                        </form>
                    </div>

                }
                else
                {
                    <div class="aspect-square bg-green-500 flex justify-center items-center">
                        @Html.DisplayFor(m => i.number)

                    </div>
                }
            </div>

        }
        <div class="col  border border-2 p-2 rounded-2xl">
            <div class="aspect-square">
                <form asp-action="Create" asp-controller="Table"  class="flex flex-col gap-10" method="post">
                    <div class="text-2xl">Thêm bàn</div>
                    <div class="form-group flex space-x-3">
                        <label form="number" class="control-label ">
                            Số bàn
                        </label>
                        <input value="@ViewData["numbertable"]" required id="number" name="number" 
                        class="focus:outline-none flex-1 w-2/3 border-b-2 " />
                    </div>
                    <button class="bg-blue-400 w-min text-white px-4 rounded-sm py-2 ml-3 hover:bg-blue-700 cursor-pointer mt-4" type="submit">
                        Thêm
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>